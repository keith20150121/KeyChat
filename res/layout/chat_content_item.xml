<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <LinearLayout 
        android:name="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="10dp" >
        
        <ImageView 
            android:id="@+id/chat_histroy_left_pic"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content" />
        
        <TextView
	        android:id="@+id/chat_histroy_left_content"
	        android:gravity="center"
	        android:layout_marginLeft="10dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textColor="#000"
	        android:textSize="18sp" />         
    </LinearLayout>
    
    <LinearLayout 
        android:name="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp" >
        
        <ImageView 
            android:id="@+id/chat_histroy_right_pic"
     	    android:layout_width="wrap_content"
     	    android:layout_height="wrap_content" />
        
        <TextView
	        android:id="@+id/chat_histroy_right_content"
	        android:gravity="center"
	        android:layout_marginLeft="10dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textColor="#000"
	        android:textSize="18sp"/>         
    </LinearLayout>

</LinearLayout>
